        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
             
                    <div class="col-12">
                         
                        <div class="table-responsive">
                            <table class="table shopping-summery text-center clean">
                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                
                                <tbody>   
                                    <%cartItems?.forEach((locals)=>{%> 
                                    <tr>   
                                        <td class="image product-thumbnail"><img src="/uploads/<%=locals?.Products?.Image[0]%>" alt="alternate text"></td>
                                        <td class="product-des product-name">
                                            <h5 class="product-name"><a href="/view-product/<%=locals?.Products?._id%>"><%=locals?.Products?.name%></a></h5>
                                            <p class="font-xs"><%locals?.Products?.description%>
                                            </p> 
                                        </td>
                                        <td class="price" data-title="Price"><span>₹<%=locals?.Products?.price%> </span></td>
                                        <td class="text-center" data-title="Stock">

<!--CHANGE PRODUCT QUANTITY -------------------------------------------------------------------------------------->

                                            <div class="detail-qty border radius  m-auto"> 
                                                <!--DECREASE-->
                                                <a href="#" class="qty-down" id='down' onclick="changeQuantity('<%= locals?._id %>','<%=locals?.Products?._id%>',-1)"><i class="fi-rs-angle-small-down"></i></a>
                                                <span class="qty-val" id="<%=locals?.Products?._id%>" ><%= locals?.quantity %></span>

                                                <a href="#" class="qty-up" id='up' onclick="changeQuantity('<%= locals?._id %>','<%= locals?.Products?._id %>',1)"><i class="fi-rs-angle-small-up"></i></a>
                                                <!--INCREASE-->
                                            </div>
<!--CHANGE PRODUCT QUANTITY -------------------------------------------------------------------------------------->
                     
                                        </td>
                                        <td class="text-right" id='subtotal'data-title="Cart">
                                            <span id='subtotal'>₹<%=locals?.Products?.price*locals.quantity%> </span>
                                        </td>
                                        <td class="action" data-title="Remove"><a href="#" class="text-muted" onclick="deleteCart('<%= locals?._id %>','<%= locals?.Products?._id %>',)"><i class="fi-rs-trash"></i></a></td>
                                    </tr>
                                   
                                   
                                    
                                </tbody>
                                <%});%> 
                            </table>
                            <hr>
                             
                        </div>
                          

                       


